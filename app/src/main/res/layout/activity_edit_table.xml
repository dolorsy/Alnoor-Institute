<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editTable">

    <LinearLayout
        android:id="@+id/editTableMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/saveChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mybfont"
            android:layout_margin="25dp"
            android:background="@drawable/buttonshape"
            android:onClick="saveTable"
            android:text="Save"
            android:textSize="22sp"

            />

        <TextView
            android:id="@+id/classRoom"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mybfont"
            android:gravity="center"
            android:paddingBottom="40dp"
            android:text="ClassRoom"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/sunday"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:paddingRight="10dp"
                android:text="الأحد"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/sundayfirst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="أول حصة"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/sundaysecond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="ثاني حصة"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/sundaythird"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="ثالث حصة"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/monday"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:paddingRight="10dp"
                android:text="الإثنين"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/mondayfirst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="أول حصة"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/mondaysecond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="ثاني حصة"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/mondaythird"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="ثالث حصة"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tusday"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:paddingRight="10dp"
                android:text="الثلاثاء"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/tusdayfirst"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="أول حصة"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/tusdaysecond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="ثاني حصة"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/tusdaythird"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="ثالث حصة"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/wednesday"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:paddingRight="10dp"
                android:text="الأربعاء"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/wednesdayfirst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="أول حصة"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/wednesdaysecond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="ثاني حصة"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/wednesdaythird"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="ثالث حصة"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/thursday"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:paddingRight="10dp"
                android:text="الخميس"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/thursdayfirst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="أول حصة"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/thursdaysecond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="ثاني حصة"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/thursdaythird"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/mybfont"
                android:text="ثالث حصة"
                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editTableWaitLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:indeterminateDrawable="@drawable/profress"
            android:padding="150dp" />

        <TextView
            android:id="@+id/editTableWaitText"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/mybfont"
            android:gravity="center"
            android:text="جاري الجلب ..."
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />
    </LinearLayout>


</FrameLayout>