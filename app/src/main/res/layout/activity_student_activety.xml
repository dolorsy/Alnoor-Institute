<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    android:padding="15dp"
    android:layout_margin="10dp"
    tools:context=".StudentActivety">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameS"
            android:textSize="20sp"
            android:text="اسم الطالب: "
            android:layout_width="0dp"
            android:layout_weight="1"

            style="@style/TextAppearance.AppCompat.Subhead"

            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/theName"
            android:textSize="20sp"
            android:text="The Name"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/TextAppearance.AppCompat.Subhead"

            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >
        <TextView
            android:id="@+id/Class"
            android:textSize="20sp"
            android:text="الصف: "
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/TextAppearance.AppCompat.Subhead"

            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/theClass"
            android:textSize="20sp"
            android:text="T he Class"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/TextAppearance.AppCompat.Subhead"

            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thePaid"
            android:textSize="20sp"
            android:text=" المدفوع: "
            android:layout_width="0dp"
            android:layout_weight="1"

            style="@style/TextAppearance.AppCompat.Subhead"

            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/paidUp"
            android:textSize="20sp"
            android:text="paid UP"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/TextAppearance.AppCompat.Subhead"

            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/required"
            android:textSize="20sp"
            android:text=" المتبقي: "
            android:layout_width="0dp"
            android:layout_weight="1"

            style="@style/TextAppearance.AppCompat.Subhead"

            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/theRequired"
            android:textSize="20sp"
            android:text="The Required"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/TextAppearance.AppCompat.Subhead"

            android:layout_height="wrap_content" />

    </LinearLayout>



    <Button
       android:id="@+id/WeekTable_Student_btn"
       android:text="Week Table"
       android:background="@drawable/buttonshape"
       android:textSize="15sp"
       android:textStyle="bold"
       android:layout_width="match_parent"
       android:layout_marginBottom="15dp"
        android:onClick="getWeekTable"
       android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/notes_student_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/buttonshape"
            android:text="The Notes"
            android:textSize="15sp"
            android:textStyle="bold"
            android:onClick="AllNotificationRecived"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="selfNote"
            android:background="@drawable/buttonshape"
            android:textSize="15sp"
            android:textStyle="bold"
            android:onClick="getAllSelfNote"
            />

    </LinearLayout>

    <Button
        android:id="@+id/allMarks"
        android:text="All Marks"
        android:background="@drawable/buttonshape"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:onClick="getAllMarks"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/std_info_btn"
        android:text="Student Informations"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/buttonshape"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/logout"
        android:onClick="logoutfun"
        android:text="Logout"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/buttonshape"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />






</LinearLayout>